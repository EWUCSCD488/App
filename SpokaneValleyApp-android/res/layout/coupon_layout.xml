<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button
        android:id="@+id/couponhowto"
        style="@style/ButtonText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="0.15"
        android:background="@drawable/yellowbutton"
        android:gravity="center"
        android:text="@string/howtoredeem"
        android:textSize="30sp" />
    
    <ImageView
        android:id="@+id/couponImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7" />
   
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/couponOkayButtons"
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="0.5"
            android:background="@drawable/greenbutton"
            android:text="@string/use_coupon"
            android:textSize="25sp" />
        
        <Button
            android:id="@+id/couponCancelButton"
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="0.5"
            android:background="@drawable/redbutton"
            android:text="@string/cancel_coupon"
            android:textSize="25sp" />
        
    </LinearLayout>
    
</LinearLayout>
